<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <RootNamespace>Gabo.AzureFunctionsTelemetry</RootNamespace>
    <AssemblyName>Gabo.AzureFunctionsTelemetry</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Using Include="Microsoft.ApplicationInsights.Channel" />
    <Using Include="Microsoft.ApplicationInsights.DataContracts" />
    <Using Include="Microsoft.ApplicationInsights.Extensibility" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.WebJobs.Logging.ApplicationInsights" Version="3.0.30" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="3.1.23" Condition="'$(TargetFramework)' == 'netstandard2.0'" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="3.1.23" Condition="'$(TargetFramework)' == 'net6.0'" />
  </ItemGroup>

</Project>
