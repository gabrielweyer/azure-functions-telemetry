{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "resourceNamePrefix": {
            "type": "string",
            "metadata": {
                "description": "Used to create a unique name. For example, with a 'hello' prefix and an Application Insights resource, the resource name will be 'hello-appi'."
            }
        },
        "reallySecretValue": {
            "type": "securestring",
            "metadata": {
                "description": "Used to populate 'Secret:ReallySecretValue'."
            }
        }
    },
    "functions": [
        {
            "namespace": "gabo",
            "members": {
                "resourceName": {
                    "parameters": [
                        {
                            "name": "prefix",
                            "type": "string"
                        },
                        {
                            "name": "serviceName",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[concat(parameters('prefix'), '-', parameters('serviceName'))]"
                    }
                },
                "storageName": {
                    "parameters": [
                        {
                            "name": "prefix",
                            "type": "string"
                        },
                        {
                            "name": "serviceName",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[concat(parameters('prefix'), '7', parameters('serviceName'))]"
                    }
                },
                "serviceBusNamespace": {
                    "parameters": [
                        {
                            "name": "prefix",
                            "type": "string"
                        },
                        {
                            "name": "serviceName",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[concat(parameters('prefix'), parameters('serviceName'))]"
                    }
                }
            }
        }
    ],
    "variables": {
        "applicationInsights": {
            "name": "[gabo.resourceName(parameters('resourceNamePrefix'), 'appi')]",
            "workspaceName": "[gabo.resourceName(parameters('resourceNamePrefix'), 'log')]"
        },
        "defaultStorage": {
            "name": "[gabo.storageName(parameters('resourceNamePrefix'), 'default')]"
        },
        "defaultFunctionApp": {
            "hostingPlanName": "[gabo.resourceName(parameters('resourceNamePrefix'), 'default-plan')]",
            "functionAppName": "[gabo.resourceName(parameters('resourceNamePrefix'), 'default-func')]"
        },
        "customStorage": {
            "name": "[gabo.storageName(parameters('resourceNamePrefix'), 'custom')]"
        },
        "customFunctionApp": {
            "hostingPlanName": "[gabo.resourceName(parameters('resourceNamePrefix'), 'custom-plan')]",
            "functionAppName": "[gabo.resourceName(parameters('resourceNamePrefix'), 'custom-func')]"
        },
        "serviceBusNamespace": {
            "name": "[gabo.serviceBusNamespace(parameters('resourceNamePrefix'), 'sb')]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2021-06-01",
            "name": "[variables('applicationInsights').workspaceName]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "pergb2018"
                },
                "retentionInDays": 30,
                "features": {
                    "enableLogAccessUsingOnlyResourcePermissions": true
                }
            }
        },
        {
            "name": "[variables('applicationInsights').name]",
            "apiVersion": "2020-02-02",
            "type": "Microsoft.Insights/components",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', variables('applicationInsights').workspaceName)]"
            ],
            "kind": "web",
            "properties": {
                "Application_Type": "web",
                "WorkspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('applicationInsights').workspaceName)]"
            }
        },
        {
            "type": "Microsoft.ServiceBus/namespaces",
            "apiVersion": "2017-04-01",
            "name": "[variables('serviceBusNamespace').name]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Basic",
                "tier": "Basic"
            },
            "properties": {
                "zoneRedundant": false
            }
        },
        {
            "type": "Microsoft.ServiceBus/namespaces/queues",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('serviceBusNamespace').name, '/default-queue')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.ServiceBus/namespaces', variables('serviceBusNamespace').name)]"
            ],
            "properties": {
                "lockDuration": "PT30S",
                "maxSizeInMegabytes": 1024,
                "requiresDuplicateDetection": false,
                "requiresSession": false,
                "defaultMessageTimeToLive": "P1D",
                "deadLetteringOnMessageExpiration": false,
                "enableBatchedOperations": true,
                "duplicateDetectionHistoryTimeWindow": "PT10M",
                "maxDeliveryCount": 2,
                "status": "Active",
                "enablePartitioning": false,
                "enableExpress": false
            }
        },
        {
            "type": "Microsoft.ServiceBus/namespaces/queues",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('serviceBusNamespace').name, '/default-exception-queue')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.ServiceBus/namespaces', variables('serviceBusNamespace').name)]"
            ],
            "properties": {
                "lockDuration": "PT30S",
                "maxSizeInMegabytes": 1024,
                "requiresDuplicateDetection": false,
                "requiresSession": false,
                "defaultMessageTimeToLive": "P1D",
                "deadLetteringOnMessageExpiration": false,
                "enableBatchedOperations": true,
                "duplicateDetectionHistoryTimeWindow": "PT10M",
                "maxDeliveryCount": 2,
                "status": "Active",
                "enablePartitioning": false,
                "enableExpress": false
            }
        },
        {
            "type": "Microsoft.ServiceBus/namespaces/queues",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('serviceBusNamespace').name, '/custom-queue')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.ServiceBus/namespaces', variables('serviceBusNamespace').name)]"
            ],
            "properties": {
                "lockDuration": "PT30S",
                "maxSizeInMegabytes": 1024,
                "requiresDuplicateDetection": false,
                "requiresSession": false,
                "defaultMessageTimeToLive": "P1D",
                "deadLetteringOnMessageExpiration": false,
                "enableBatchedOperations": true,
                "duplicateDetectionHistoryTimeWindow": "PT10M",
                "maxDeliveryCount": 2,
                "status": "Active",
                "enablePartitioning": false,
                "enableExpress": false
            }
        },
        {
            "type": "Microsoft.ServiceBus/namespaces/queues",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('serviceBusNamespace').name, '/custom-exception-queue')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.ServiceBus/namespaces', variables('serviceBusNamespace').name)]"
            ],
            "properties": {
                "lockDuration": "PT30S",
                "maxSizeInMegabytes": 1024,
                "requiresDuplicateDetection": false,
                "requiresSession": false,
                "defaultMessageTimeToLive": "P1D",
                "deadLetteringOnMessageExpiration": false,
                "enableBatchedOperations": true,
                "duplicateDetectionHistoryTimeWindow": "PT10M",
                "maxDeliveryCount": 2,
                "status": "Active",
                "enablePartitioning": false,
                "enableExpress": false
            }
        },
        {
            "apiVersion": "2019-06-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('defaultStorage').name]",
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            },
            "properties": {
                "accessTier": "Hot"
            }
        },
        {
            "apiVersion": "2019-06-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('customStorage').name]",
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            },
            "properties": {
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2019-08-01",
            "name": "[variables('defaultFunctionApp').hostingPlanName]",
            "location": "[parameters('location')]",
            "kind": "",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2019-08-01",
            "name": "[variables('defaultFunctionApp').functionAppName]",
            "location": "[parameters('location')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "kind": "functionapp",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('defaultFunctionApp').hostingPlanName)]"
            ],
            "properties": {
                "httpsOnly": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('defaultFunctionApp').hostingPlanName)]"
            },
            "resources": [
                {
                    "type": "config",
                    "apiVersion": "2019-08-01",
                    "name": "appsettings",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', variables('defaultStorage').name)]",
                        "[resourceId('Microsoft.Web/sites', variables('defaultFunctionApp').functionAppName)]",
                        "[resourceId('Microsoft.Insights/components', variables('applicationInsights').name)]",
                        "[resourceId('Microsoft.ServiceBus/namespaces', variables('serviceBusNamespace').name)]"
                    ],
                    "properties": {
                        "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('defaultStorage').name, ';AccountKey=', listKeys(variables('defaultStorage').name, '2019-06-01').keys[0].value)]",
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('microsoft.insights/components/', variables('applicationInsights').name), '2018-05-01-preview').InstrumentationKey]",
                        "FUNCTIONS_EXTENSION_VERSION": "~3",
                        "FUNCTIONS_WORKER_RUNTIME": "dotnet",
                        "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('defaultStorage').name, ';AccountKey=', listKeys(variables('defaultStorage').name, '2019-06-01').keys[0].value)]",
                        "WEBSITE_CONTENTSHARE": "[variables('defaultFunctionApp').functionAppName]",
                        "WEBSITE_RUN_FROM_PACKAGE": "1",
                        "Secret:ReallySecretValue": "[parameters('reallySecretValue')]",
                        "ServiceBusConnection": "[listKeys(resourceId('Microsoft.ServiceBus/namespaces/authorizationRules', variables('serviceBusNamespace').name, 'RootManageSharedAccessKey'), '2017-04-01').primaryConnectionString]"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2019-08-01",
            "name": "[variables('customFunctionApp').hostingPlanName]",
            "location": "[parameters('location')]",
            "kind": "",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2019-08-01",
            "name": "[variables('customFunctionApp').functionAppName]",
            "location": "[parameters('location')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "kind": "functionapp",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('customFunctionApp').hostingPlanName)]"
            ],
            "properties": {
                "httpsOnly": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('customFunctionApp').hostingPlanName)]"
            },
            "resources": [
                {
                    "type": "config",
                    "apiVersion": "2019-08-01",
                    "name": "appsettings",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', variables('customStorage').name)]",
                        "[resourceId('Microsoft.Web/sites', variables('customFunctionApp').functionAppName)]",
                        "[resourceId('Microsoft.Insights/components', variables('applicationInsights').name)]",
                        "[resourceId('Microsoft.ServiceBus/namespaces', variables('serviceBusNamespace').name)]"
                    ],
                    "properties": {
                        "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('customStorage').name, ';AccountKey=', listKeys(variables('customStorage').name, '2019-06-01').keys[0].value)]",
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('microsoft.insights/components/', variables('applicationInsights').name), '2018-05-01-preview').InstrumentationKey]",
                        "FUNCTIONS_EXTENSION_VERSION": "~3",
                        "FUNCTIONS_WORKER_RUNTIME": "dotnet",
                        "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('customStorage').name, ';AccountKey=', listKeys(variables('customStorage').name, '2019-06-01').keys[0].value)]",
                        "WEBSITE_CONTENTSHARE": "[variables('customFunctionApp').functionAppName]",
                        "WEBSITE_RUN_FROM_PACKAGE": "1",
                        "Secret:ReallySecretValue": "[parameters('reallySecretValue')]",
                        "ServiceBusConnection": "[listKeys(resourceId('Microsoft.ServiceBus/namespaces/authorizationRules', variables('serviceBusNamespace').name, 'RootManageSharedAccessKey'), '2017-04-01').primaryConnectionString]"
                    }
                }
            ]
        }
    ],
    "outputs": {
        "defaultFunctionAppName": {
            "type": "string",
            "value": "[variables('defaultFunctionApp').functionAppName]"
        },
        "customFunctionAppName": {
            "type": "string",
            "value": "[variables('customFunctionApp').functionAppName]"
        },
        "serviceBusNamespace": {
            "type": "string",
            "value": "[variables('serviceBusNamespace').name]"
        }
    }
}